<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RoomsActivity">

    <Button
        android:id="@+id/bScripts2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="меню"
        app:layout_constraintBottom_toBottomOf="@+id/bRooms"
        app:layout_constraintEnd_toStartOf="@+id/bRooms"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/bRooms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="помещения"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/bScripts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="сценарии"
        app:layout_constraintBottom_toBottomOf="@+id/bRooms"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bRooms"
        tools:ignore="HardcodedText" />
</androidx.constraintlayout.widget.ConstraintLayout>